            </columns>
        </TableView>
        <Button fx:id="prevPageBtn" layoutX="77.0" layoutY="373.0" onAction="#previousPage" text="Anterior" />
        <Label fx:id="pageDisplay" layoutX="147.0" layoutY="377.0" text="Página 1 de 1" />
        <Button fx:id="nextPageBtn" layoutX="228.0" layoutY="373.0" onAction="#nextPage" text="Próximo" />
    </children>
</AnchorPane>
