<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="530.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.catolicapb.introwebatividadefx.Controller.MainScreenController">
    <children>
        <Label layoutX="392.0" layoutY="47.0" styleClass="title-label" text="Produtos Cadastrados" />
      <AnchorPane layoutX="74.0" layoutY="111.0" prefHeight="45.0" prefWidth="753.0">
         <children>
              <Button layoutX="14.0" layoutY="10.0" mnemonicParsing="false" onAction="#btAddNewProductAction" text="Adicionar Produto" />
              <Button fx:id="btUserManagement" layoutX="136.0" layoutY="10.0" mnemonicParsing="false" onAction="#btUserManagementAction" text="Gerenciar Usuários" />
              <Button layoutX="703.0" layoutY="12.0" mnemonicParsing="false" onAction="#btLogoutAction" text="Sair" />
         </children>
      </AnchorPane>
        <TextField fx:id="searchBar" layoutX="571.0" layoutY="373.0" prefWidth="250.0" promptText="Buscar produto..." />
        <TableView fx:id="productTable" layoutX="74.0" layoutY="175.0" prefHeight="178.0" prefWidth="751.0" stylesheets="@../../../../CSS/Style.css">
            <columns>
                <TableColumn fx:id="nomeColumn" prefWidth="213.0" text="Nome" />
                <TableColumn fx:id="quantidadeColumn" prefWidth="145.0" text="Quantidade" />
                <TableColumn fx:id="precoColumn" prefWidth="132.0" text="Preço" />
